<Window x:Class="strona125.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:strona125"
        mc:Ignorable="d"
        Title="Zabawa z instrukcjami if-else" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="enableCheckBox" Content="Włącza zmianę etykiety" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <Button x:Name="changeText" Content="Kliknięcie zmienia etykietę" VerticalAlignment="Center" HorizontalAlignment="Center" Click="changeText_Click"/>
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Grid.ColumnSpan="2" Foreground="White" FontSize="24"><Run Text="Naciśnij przycisk by zmienić te"/><Run Text="ks"/><Run Text="t"/></TextBlock>

    </Grid>
</Window>
